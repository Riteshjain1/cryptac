<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/colorAccent"
    tools:context=".AboutUsActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/colorPrimary">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@drawable/arrow_back"
                android:background="@color/colorPrimary"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About us"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:layout_marginLeft="80dp"
                android:textSize="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="50dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:text="Developers and Founders of Cryptac"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryBlue"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ritesh Ranka"
            android:background="@drawable/background_button"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed graduation in B.Tech(IT) from MIT, Manipal. Always interested in App Development. Came up with the idea of the most reliable and easy to use cryptocurrency app in college days along with his friends. Responsible for your seamless experience with ease on Cryptac."
            android:background="@drawable/card_border"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chinmaya"
            android:background="@drawable/background_button"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed graduation in B.Tech(IT) from MIT, Manipal. A Coding enthusiast. Mastermind behind the cryptocurrency value depictions with unmatched acuuracy."
            android:background="@drawable/card_border"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Purnima Jain"
            android:background="@drawable/background_button"
            android:layout_marginTop="35dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:gravity="center"
            android:textSize="25dp"
            android:textColor="@color/colorWhite"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Completed graduation in B.Tech(IT) from MIT, Manipal. A App Dev Enthusiast. Unmatched coordinator between the design and implementation phase of the app."
            android:background="@drawable/card_border"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginEnd="35dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            />

    </LinearLayout>

</ScrollView>